generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id Int @id @default(autoincrement())
  event_id Int
  full_name String
  email String @unique
  date_of_birth DateTime
  where_hear String
}

model events {
  id Int @id @default(autoincrement())
  title String
  description String
  event_date DateTime
  organizer String
}